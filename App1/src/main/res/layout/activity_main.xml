<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.chen.cn.MainActivity">
        <data></data>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">
            <Button
                android:id="@+id/btn_bindSerivcec"
                android:text="绑定远程Service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_showStr"
                android:hint="此处将显示得到的远程字符串"
                android:layout_marginTop="30dip"
                android:layout_below="@id/btn_bindSerivcec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_getStr"
                android:layout_below="@id/tv_showStr"
                android:layout_marginTop="10dip"
                android:text="得到远程字符串"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_below="@id/btn_getStr"
                android:layout_marginTop="30dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_num1"
                    android:background="@drawable/shape_white_border"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=" * 3   +   2 * "
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_num2"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:background="@drawable/shape_white_border"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_sum"
                    android:text=" = "
                    android:textSize="25sp"
                    android:padding="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_result"
                    android:background="@drawable/shape_white_border"
                    android:hint="结果"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
</layout>
